\---
layout: default
comments: true
\---
{% assign author = site.authors[page.author] %}
%div{:itemprop => "blogPost", :itemscope => "itemscope", :itemtype => "http://schema.org/BlogPosting"}
  %meta{:content => "blog.myitcv.org.uk{{ page.id }}", :itemprop => "url"}/
  %h1{:itemprop => "name"} {{ page.title }}
  .page_details
    %hr.page_details/
    %abbr.pagedate{:itemprop => "datePublished", :title => "{{ page.date | date_to_xmlschema }}"} {{ page.date | date_to_string | upcase }}
    %span.author{:itemprop => "author", :itemscope => "itemscope", :itemtype => "http://schema.org/Person"}
      %meta{:content => "{{ author.web }}", :itemprop => "url"}/
      %a{:href => "{{ author.web }}", :rel => "author", :title => "author profile"}
        %span{:itemprop => "name"} {{ author.display_name }}
    %span.location {{ page.location | upcase }}
    %span.tags
      %ul.tags
        {% for tag in page.tags %}
        %li.tags {{ tag | upcase }}
        {% endfor %}
    %hr.page_details/
  {{ content }}
%hr/
%h4 Related Posts
%ul.posts
  {% for post in site.related_posts limit:3 %}
  %li
    %span {{ post.date | date_to_string }}
    \&raquo;
    %a{:href => "{{ post.url }}"} {{ post.title }}
  {% endfor %}
{{ if page.comments }}
%hr/
#disqus_thread
:javascript
  /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
  {% if site.disqus_developer == true %}
  var disqus_developer = 1;
  {% endif %}
  var disqus_shortname = 'myitcv'; // required: replace example with your forum shortname
  var disqus_identifier = '{{ site.url }}{{ page.id }}';

  /* * * DON'T EDIT BELOW THIS LINE * * */
  (function() {
      var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
      dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
      (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
  })();
%noscript
  Please enable JavaScript to view the
  %a{:href => "http://disqus.com/?ref_noscript"} comments powered by Disqus.
%a.dsq-brlink{:href => "http://disqus.com"}
  comments powered by
  %span.logo-disqus Disqus
{{ endif }}
