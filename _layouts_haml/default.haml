<!doctype html>
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title {{ page.title }}
    %link{:href => "/images/bike_favicon.png", :rel => "icon", :type => "image/png"}/
    %link{:href => "/stylesheets/styles.css", :rel => "stylesheet"}/
    %link{:href => "/stylesheets/pygments.css", :rel => "stylesheet"}/
    %meta{:content => "width=device-width, initial-scale=1, user-scalable=no", :name => "viewport"}/
    /[if lt IE 9]
      <script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  %body
    .wrapper
      %header
        %div{:itemscope => "itemscope", :itemtype => "http://schema.org/Blog"}
          %h1
            %a{:href => "/"} myitcv:blog
        %meta{:content => "schema blog", :itemprop => "name"}/
        %hr/
        %h3 Paul Jolly's blog
      %section
        {{ content }}
      %footer
        %p
          %a{:href => "http://www.myitcv.org.uk"} http://www.myitcv.org.uk
          %br/
          %a{:href => "mailto:paul@myitcv.org.uk"} paul@myitcv.org.uk
        %p
          %a.twitter.icon{:href => "http://twitter.com/P__A__J"} Twitter
          %a.google.icon{:href => "https://plus.google.com/u/0/105997489348527668257", :rel => "publisher"} Google
          %a.skype.icon{:href => "skype:myitcv"} Skype
          %a.linkedin.icon{:href => "http://uk.linkedin.com/in/pauljolly/"} LinkedIn
          %a.github.icon{:href => "https://github.com/myitcv"} github
          %br/
        %p
          %small
            Theme by
            %a{:href => "https://github.com/orderedlist"} orderedlist
